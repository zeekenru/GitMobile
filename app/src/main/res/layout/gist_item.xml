<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:background="@drawable/item_border">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/gist_user_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"/>


    <TextView
        android:id="@+id/description_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="56dp"
        android:layout_toEndOf="@+id/gist_user_avatar"
        android:ellipsize="end"
        android:maxLength="35"
        android:maxLines="1"
        android:text="Java related code"
        android:textSize="16sp"/>


    <TextView
        android:id="@+id/comments_count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/description_text"
        android:layout_below="@+id/gist_user_avatar"
        android:drawableEnd="@drawable/ic_comment"
        android:drawablePadding="3dp"
        android:textSize="16sp"
        android:text="1035"/>


    <TextView
        android:id="@+id/language_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/comments_count_text"
        android:layout_alignBottom="@+id/comments_count_text"
        android:layout_alignTop="@id/comments_count_text"
        android:layout_marginStart="28dp"
        android:layout_toEndOf="@+id/comments_count_text"
        android:drawableEnd="@drawable/ic_code"
        android:drawablePadding="3dp"
        android:text="Javascript"
        android:textSize="16sp"/>


</RelativeLayout>