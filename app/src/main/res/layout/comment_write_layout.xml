<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/write_comment_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/add_comment_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/default_avatar" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/add_comment_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/add_comment_avatar"
        android:hint="@string/write_comment"
        android:inputType="textAutoCorrect|textLongMessage|textShortMessage"
        android:minHeight="40dp" />

    <ImageView
        android:id="@+id/add_comment_send_btn"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="22dp"
        app:srcCompat="@drawable/ic_send" />

</RelativeLayout>