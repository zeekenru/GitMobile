<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.kovapss.gitmobile.view.repositories.detail.readme.RepositoryReadmeFragment">

    <RelativeLayout
        android:id="@+id/readme_filename_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/item_border"
        >
        <TextView
            android:id="@+id/readme_filename_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_centerVertical="true"
            android:text="Readme.md"
            android:layout_marginStart="20dp"
            />
    </RelativeLayout>

    <br.tiagohm.markdownview.MarkdownView
        android:id="@+id/readme_markdown_view"
        app:escapeHtml="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/readme_filename_layout"
        />

</RelativeLayout>
