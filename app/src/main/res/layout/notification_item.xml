<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notification_item_root"
    android:layout_width="match_parent"
    android:layout_height="75dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/notification_item_user_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/default_avatar"
        app:layout_constraintStart_toStartOf="@id/notification_item_root"
        app:layout_constraintTop_toBottomOf="@id/notification_item_root" />
    <TextView
        android:id="@+id/notification_item_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/notification_item_user_avatar"
        app:layout_constraintTop_toTopOf="@id/notification_item_user_avatar"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        android:text="Username"
        />
    <TextView
        android:id="@+id/notification_item_action_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="starred"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/notification_item_user_name"
        app:layout_constraintTop_toTopOf="@id/notification_item_user_name"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/notification_item_action_object"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="none"
        android:text="zeekenru/TranslateNow"
        app:layout_constraintStart_toEndOf="@id/notification_item_action_name"
        app:layout_constraintTop_toTopOf="@id/notification_item_action_name"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        />

</android.support.constraint.ConstraintLayout>